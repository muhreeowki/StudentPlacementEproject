<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Student"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnViewCompanies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Companies"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Notifications"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewPapers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Previous Papers"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Selected Students"
        android:layout_marginBottom="16dp"/>
</LinearLayout>